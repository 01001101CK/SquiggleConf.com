---
import { Image } from "astro:assets";
import LogomarkTransparent from "~/assets/2025/logomark-transparent.svg";
import LogoWith2025 from "~/assets/2025/logo-with-2025.svg";
import Logo from "~/assets/2025/logo.svg";
import Poster from "~/assets/2025/poster.png";
import LogomarkOnBackground from "~/assets/2025/logomark-on-background.svg";

const assets = [
	{
		name: "Logomark Transparent",
		src: LogomarkTransparent,
		alt: "SquiggleConf logomark on a transparent background",
	},
	{
		name: "Logomark on Background",
		src: LogomarkOnBackground,
		alt: "SquiggleConf logomark on a dark blue background",
	},
	{
		name: "Logo with 2025",
		src: LogoWith2025,
		alt: "SquiggleConf logo with 2025",
	},
	{
		name: "Logo",
		src: Logo,
		alt: "SquiggleConf logo",
	},
	{
		name: "Poster",
		src: Poster,
		alt: "Poster: SquiggleConf 2025; September 18-19 Boston MA; A conference for excellent web dev tooling; At the New England Aquarium; Tickets on sale now!",
	},
];
---

<div class="branding">
	{
		assets.map(({ name, src, alt }) => (
			<figure>
				<Image
					alt={alt}
					class="asset-image"
					src={src}
					style={
						src.height < src.width
							? {
									height: `${(src.height / src.width) * 15}rem`,
									width: "15rem",
								}
							: {
									maxWidth: "15rem",
								}
					}
				/>
				<figcaption>
					<a href={src.src} target="_blank">
						{name}
					</a>
				</figcaption>
			</figure>
		))
	}
</div>

<style>
	.branding {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		justify-content: center;
		text-align: center;
	}
</style>
